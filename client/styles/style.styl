@import '_normalize.styl'
@import '_typography.styl'

body
  background white

.catalog__container
  display flex
  flex-wrap wrap
  max-width 1000px
  margin 0 auto

.product__container
  flex-basis calc(33.333% - 4rem)
  flex-grow 1
  flex-shrink 0
  margin 0 2rem 2rem 2rem
  padding 2rem
  border 1px solid lightgray
  background white
  box-shadow 0 0 0 5px rgba(0,0,0,0.03);
  position relative


.single__product
  @extend .product__container
  max-width 900px
  margin 0 auto
  display flex
  background white
  .product__container
    box-shadow none
    margin 0 2rem 0 0
    border 0
    padding 0
    flex 1 0 60%
    max-width 60%
  .reviews__container
    flex 1 0 40%
    max-width 40%
  .product__image
    width 100%
    margin 0

.product__image
  width calc(100% + 4rem)
  margin-left -2rem
  margin-top -2rem
  max-width none

.reviews__list
  border-bottom 2px solid lightgrey
  padding 1rem 0
  p
    font-size 1.2rem
    margin 0
  strong
    color blue
    margin-right 5px

.reviews__form
  input, textarea
    width 60%
    border 0
    font-size 1.3rem
    padding 1rem 0.5rem
    border-bottom 1px solid lightgrey
    outline none
    resize vertical


.product__grid
  position relative

/*
  Buttons
*/

.product__info--container
  display flex

button, .product__info--button
  border 2px solid lighten(grey, 90%)
  background none
  flex-basis 100%
  display inline-block
  line-height 2
  text-decoration none
  padding 5px
  text-align center
  font-size 15px
  color blue
  transition all 0.2s
  box-sizing padding-box
  &:hover, &:focus
    border-color blue
    outline 0
